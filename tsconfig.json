{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true, // needed to import .ts
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true, // must have this for allowImportingTsExtensions
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}